		<managed-bean-scope>session</managed-bean-scope> </managed-bean> -->
	<navigation-rule>
		<!-- <display-name>Login</display-name> -->
		<!-- <from-view-id>*.xhtml</from-view-id> --> <!-- Optional if omitted works from all pages. -->
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>tableusers</from-outcome>
			<to-view-id>/tableusers.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>signup</from-outcome>
			<to-view-id>/newuser.xhtml</to-view-id>
		</navigation-case>
		<!-- <navigation-case> <from-outcome>retry</from-outcome> <to-view-id>/index.xhtml</to-view-id> 
			</navigation-case> -->
	</navigation-rule>
	<navigation-rule>
		<display-name>newuser</display-name>
		<from-view-id>/newuser.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>users</from-outcome>
			<to-view-id>/users.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/errors.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>startOver</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>AddBid</display-name>
		<from-view-id>/CreateBid.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/ListBid.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>