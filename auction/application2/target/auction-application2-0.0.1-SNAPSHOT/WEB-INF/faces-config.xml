<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<message-bundle>com.jdap.auction.application.messages</message-bundle>
		<resource-bundle>
			<base-name>com.jdap.auction.application.messages</base-name>
			<!-- should be com.jdap.auction.application.messages, my msgs, page 256 -->
			<var>msg</var>
		</resource-bundle>
		<!-- <message-bundle>com.jdap.auction.application.appmessage</message-bundle> generated application 
			msg -->
<!-- 		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>es</supported-locale>
			<supported-locale>de</supported-locale>
		</locale-config> -->
	</application>
